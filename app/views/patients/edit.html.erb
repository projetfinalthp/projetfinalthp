<%= render 'layouts/side-navbar-patient' %>
<!-- Page Content  -->
<div id="content">
  <%= render 'layouts/top-navbar-patient' %>
  <section class="page-section bg-light" id="editprofile">
    <div class= container>
      <%= form_for @patient do |f| %>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <h1 class="panel-title pull-left" style="font-size:30px;">Mon profil</h1>
              <br>
              <br>
              <br>
              <div class="form-group">
                <label>Prénom</label>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <label>Nom</label>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <label for="Your_gender">Sexe</label>
                <%= f.text_field :sexe, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <label>Date de naissance</label>
                <%= f.datetime_field :birth, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <label>Traitement</label>
                <%= f.text_area :treatment, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <label>Ville</label>
                <%= f.text_field :city, class: "form-control" %>
              </div>
              <br>
              <br>
              <div>
                <center><%= f.submit "Mettre à jour", class:"button_color-profile" %></center>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>
