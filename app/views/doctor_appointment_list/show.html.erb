    <script>
      $(document).ready(function () {

             $('#sidebarCollapse').on('click', function () {
                 $('#sidebar').toggleClass('active');
             });

         });
    </script>
    <script>
      $('.dropdown-toggle').dropdown()
    </script>

	 <script>$(document).ready(function(){
	$('#nav-icon3').click(function(){
		$(this).toggleClass('open');
		});
	});
	</script>


      </head>
	<body>

    <div class="wrapper">
		<!-- Sidebar  -->
			<nav id="sidebar">
			<div class="sidebar-header">
				<img src="https://i.ibb.co/PmfTM9j/Moodlinkv3.png" class="logo-size">
			</div>
			<ul class="list-group">
				<li>
				<div id="sidebarCollapse"><div id="nav-icon3" id="sidebarCollapse">
					<span></span>
					<span></span>
					<span></span>
					<span></span>
				</div></div>
				<div class="navbar-text-color">
				<div class="nav-link">
				<div class="media align-items-center">
        <%= link_to ('<i class="fas fa-chart-bar fa-2x"></i>'.html_safe), patient_path(params[:id]), class: "link_color-icon" %>
			  <%= link_to "Mon dashboard", patient_path(params[:id]), class: 'link_color-sidebar' %>
				</div></div>
				<div class="nav-link">
				<div class="media align-items-center">
        <%= link_to ('<i class="fas fa-user-md fa-2x icon-perso"></i>'.html_safe), patient_path(params[:id]), class: "link_color-icon" %>
				<%= link_to "Mes soignants et RDV", doctor_appointment_list_path, class: 'link_color-sidebar' %>
				</div></div>
				<div class="nav-link">
				<div class="media align-items-center">
        <%= link_to ('<i class="fas fa-user fa-2x icon-perso"></i>'.html_safe), patient_path(params[:id]), class: "link_color-icon" %>
				<%= link_to "Mon profil", patients_path, class: 'link_color-sidebar' %>
				</div></div>
				</div>
				</li>
			</ul>
			</nav>
 	<!-- Page Content  -->
    <div id="content">
		<nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
			<div class="container-fluid">
					<!-- Brand -->
					<a class="h4 mb-0 text-black text-uppercase d-none d-lg-inline-block" href="./index.html">Mes soignants et RDVs</a>
					<!-- User -->
					<div class="dropdown">
						<%= image_tag current_patient_avatar(current_patient), size: 30, class:"rounded-circle"%>
						<button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							 <%= current_patient.first_name%> <%=current_patient.last_name %>
						</button>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="#">Mon profil</a>
							<a class="dropdown-item" href="#">Paramètres</a>
							<div class="dropdown-divider"></div>
							<a class="dropdown-item" href="#">Se déconnecter</a>
						</div>
					</div>
			</div>
		</nav>
	    <br>
        <div class="container-fluid">
          <h5>Mes prochains rendez-vous</h5>



          <div class="container-fluid">
            <div class="row">
              <% @patient_appointments.each do |appointment| %>
                <div class="card mb-3 mr-3" style="width: 18rem;">
                  <div class="card-header"><%= appointment.date %></div>
                  <div class="card-body">
                    <img src="https://bit.ly/352vL1I" class="float-left rounded-circle avatar-md">
                    <div class="content">
                      <h5 class="card-title">Nom du docteur</h5>
                      <h6 class="card-subtitle mb-2 text-muted">Psychiatre</h6>
                      <br>
                    </div>
                    <p class="card-text">Conventionné secteur 1
                      <br>
                      Adresse</p>
                    <div class="card-link"><%= link_to "VOIR PLUS", practionner_path %></div>
                    <a href="#" class="card-link">Prendre RDV</a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>




        <div class="container">
          <h5>Mon équipe soignante</h5>
          <br>
          <div class="row">
            <% @patient_practionners.each do |practionner| %>
              <div class="card mb-3 mr-3" style="width: 18rem;">
                <div class="card-body">
                  <img src="https://bit.ly/352vL1I" class="float-left rounded-circle avatar-md">
                  <div class="content">
                    <h5 class="card-title">Dr. <%= practionner.first_name %> <%= practionner.last_name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Psychiatre</h6>
                    <br>
                  </div>
                  <p class="card-text">Conventionné secteur 1
                    <br>
                    Adresse</p>
                  <div class="card-link"><%= link_to "VOIR PLUS", practionner_path %></div>
                  <a href="#" class="card-link">Prendre RDV</a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
