<%= render 'layouts/side-navbar-doctor' %>
<!-- Page Content  -->
<div id="content">
  <%= render 'layouts/top-navbar-doctor' %>
  <div class="container">
    <h2 class="text-center">Editer mon profil</h2>
    <hr class="accent mb-3">
    <div class="line"></div>
    <% if @practionner.errors.any? %>
      <p>Erreurs lors de la modifications : </p>
      <ul>
        <% @practionner.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    <% end %>
    
<section class="page-section bg-light" id="editprofile">
  <div class= container>
    <%= form_for @practionner do |f| %>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="panel panel-default">
              <div class="panel-body">
                <h1 class="panel-title pull-left" style="font-size:30px;">Mon profil</h1><br> <br><br>          
                 <div class="form-group">
                  <label>Prénom</label>
                  <%= f.text_field :first_name, class: "form-control" %>
                 </div><br>
                 <div class="form-group">
                  <label>Nom</label>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div><br>
                <div class="form-group">
                  <label>Spécialité</label>
                  <%= f.text_area :specialty, class: "form-control" %>
                </div><br>
                <div class="form-group">
                  <label>Diplômes</label>
                  <%= f.text_area :diploma, class: "form-control" %>
                </div><br>
                <div class="form-group">
                  <label>Adresse de votre cabinet</label>
                  <%= f.text_field :adress, class: "form-control" %>
                </div><br><br>
                <div>
                  <center><%= f.submit "Mettre à jour", class:"button_color-profile" %></center>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </section>